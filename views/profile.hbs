<h1>Profile</h1>
<div class="container">
    <div class="row">
        <div class="col s6">
            {{#if user.avatarURL}}
            <img class="avatar" src="/{{user.avatarURL}}" alt="avatar-{{user.login}}">
            {{else}}
            <p>No avatar</p>
            {{/if}}
        </div>
        <div class="col s6">
            <form action="/profile" method="POST" enctype="multipart/form-data">
                <p> Your email: {{user.email}}</p>
                <div class="input-field">
                    <input placeholder="fio" name="fio" id="fio" type="text" class="validate" required
                        value="{{user.fio}}">
                    <label for="fio">your fio</label>
                    <span class="helper-text" data-error="the name can not be empty"></span>
                </div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Avatar</span>
                        <input type="file" name="avatar">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn waves-effect waves-light" type="submit">Submit
                    <i class="material-icons right">change</i>
                </button>
            </form>
        </div>
    </div>
</div>