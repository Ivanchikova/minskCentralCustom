<div class="row">
    <div class="col s6 offset-s3">
    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}
    <h1>Восстановить пароль</h1>
        <form action="/auth/password" method="POST">
            <div class="input-field">
                <input placeholder="password" name="password" id="password" type="password" class="validate" required>
                <label for="password">Пожалуйста введите ваш пароль</label>
                <span class="helper-text" data-error="Wrong" data-success="Success"></span>
            </div>
                 <button class="btn waves-effect waves-light" type="submit">Новый пароль
                    <i class="material-icons right">send</i>
                 </button>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="hidden" name="userId" value="{{userId}}">
        <input type="hidden" name="tolen" value="{{tolen}}">
        </form>  
    </div>
  </div>
        