<div class="row">
    <div class="col s6 offset-s3">
    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}
    
    <h1>Forgot your password?</h1>
        <form action="/auth/reset" method="POST">
            <div class="input-field">
                <input placeholder="email" name="email" id="email" type="email" class="validate" required>
                <label for="email" id="label">Please enter your email</label>
                <span class="helper-text" data-error="Wrong" data-success="Success"></span>
            </div>
                 <button class="btn waves-effect waves-light" type="submit">Reset the password
                    <i class="material-icons right">send</i>
                 </button>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>  
    </div>
  </div>
        