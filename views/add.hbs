
<h1 class="center-center">Add new detector</h1>
    {{#if error}}
    <p class="alert">{{error}}</p>
    {{/if}}
<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="location"  name="location" id="location" type="text" class="validate" value="{{data.location}}" required>
        <label for="location">Location</label>
        <span class="helper-text" data-error="Wrong" data-success="Success"></span>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Submit
    <i class="material-icons right">send</i>
  </button>
    <input type="hidden" name="_csrf" value="{{csrf}}">
</form>